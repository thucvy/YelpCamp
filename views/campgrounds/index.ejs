<% layout('layouts/boilerplate') %>
<h1 class="text-center my-auto">All Campgrounds</h1>

<div id="map" style="width:100%; height:500px" class="my-3 rounded"></div>

    <%for (campground of campgrounds){%>
        <div class="card mb-3 rounded">
            <div class="row">
                <div class="col-lg-4">
                    <% if (campground.images.length) {%>
                        <img src="<%=campground.images[0].thumbnailShow%>" alt="" class="img-fluid rounded">

                        <%} else {%>
                            <img style="width: 450px; height: 240px"
                                src="https://as1.ftcdn.net/v2/jpg/04/62/93/66/1000_F_462936689_BpEEcxfgMuYPfTaIAOC1tCDurmsno7Sp.jpg"
                                alt="" class="img-fluid">
                            <%}%>
                </div>
                <div class="col-lg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View
                            <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%-JSON.stringify(campgrounds) %>} //instead of cmd+s, click cmd+k and then s (without the cmd key) to save
            </script>

            <script src="/javascripts/clusterMap.js"></script>